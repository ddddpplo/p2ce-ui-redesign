<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/pages/main-menu/chapter-select.ts" />
	</scripts>
	<Panel class="chapterselect menu-page">
		<Panel class="chapterselect__body menu-page__blur-rect" hittest="true">
			
			<Panel class="mainmenu__navitem-title">
				<Label text="Start New Game"/>
			</Panel>
			
			<Panel class="chapterselect__chapters-thumbnails-container">
				<Panel class="chapterselect__chapter-list-container">
					<Panel class="chapterselect__chapter-list-scroll-shadow__top"/>
					<Panel class="chapterselect__chapter-list-scroll-shadow__bottom"/>
					<Panel class="chapterselect__chapter-list" id="ChapterList" onload="ChapterSelect.onLoaded();">
						<!-- Chapter buttons -->
						<!-- Make sure there are the same number of buttons as there are chapters -->
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(1);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(2);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(3);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(4);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(5);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(6);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(7);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(8);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(9);"/>
						<TextButton class="chapterselect__chapter-button grey-hover-button" onactivate="ChapterSelect.clickChapterButton(10);"/>
					</Panel>
				</Panel>
				
				<Panel class="chapterselect__preview-container">
					<Panel class="chapterselect__preview-alignment">
						<Image id="ChapterThumbnail" class="chapterselect__thumbnail"/>
						<Panel class="chapterselect__chaptertitle-container">
							<Label id="ChapterNumberTitle" class="chapterselect__chapter-number-title" />
							<Label id="ChapterTitle" class="chapterselect__chapter-title" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>
			
		</Panel>
		<Panel class="menu-page__bottom-buttons-container">
			<Button class="menu-page__bottom-button white-hover-button menu-page__blur-rect" onactivate="">
				<Image src="file://{images}/reset.svg" texturewidth="35" textureheight="35"/>
				<Label text="Back"/>
			</Button>
			<Button class="menu-page__bottom-button white-hover-button menu-page__blur-rect" onactivate="ChapterSelect.playGame();">
				<Image src="file://{images}/play.svg" texturewidth="35" textureheight="35"/>
				<Label text="Play"/>
			</Button>
		</Panel>
	</Panel>
</root>
